<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/vSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_trans_diag" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:layout_below="@id/vSpinner"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/dr_shadow_spot" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvTitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:text="تفاصيل الذكر"
            android:textColor="@color/black_light"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="1" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvTxtSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvTitle"
            android:layout_marginRight="60dp"
            android:layout_marginTop="6dp"
            android:text="مع :"
            android:textColor="@color/black_light"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="1" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvTxtSender"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/tvTxtSender"
            android:layout_alignLeft="@id/tvTitle"
            android:gravity="right"
            android:text="أبو فتحي"
            android:textColor="@color/black_light"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="1" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tvTxtSender"
            android:layout_below="@id/tvTxtSender"
            android:layout_marginTop="6dp"
            android:text="20"
            android:textColor="@color/black_light"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="1" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvCount"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/tvCount"
            android:layout_alignLeft="@id/tvTitle"
            android:text="مرة"
            android:gravity="right"
            android:textColor="@color/black_light"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="1" />
        
        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCount"
            android:layout_alignRight="@+id/tvTxtSender"
            android:layout_toLeftOf="@id/tvCount"
            android:layout_marginTop="6dp"
            android:layout_alignLeft="@id/tvTitle"
            android:gravity="right"
            android:text="بسبسيب يبس يب يب يب ب م"
            android:textColor="@color/black_light"
            android:textSize="@dimen/ts_title_small"
            app:fontId="1" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="78dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                android:id="@+id/btnCansel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="تنيم"
                android:textColor="@color/black_light"
                android:textSize="@dimen/ts_text_normal"
                app:fontId="2" 
                android:visibility="gone"/>

            <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="موافق"
                android:textColor="@color/black_light"
                android:textSize="@dimen/ts_text_normal"
                app:fontId="2" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>