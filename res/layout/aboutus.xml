<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.brainSocket.khednima3ak3.views.ImageViewAppBG
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg2" />

    <ScrollView
            android:layout_width="match_parent"
    android:layout_height="match_parent"  
>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp"
            android:paddingTop="25dp" >

            <LinearLayout
                android:id="@+id/brain_logo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:background="@drawable/bg_buble_orange_left"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="40dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp" >

                <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/about_for_more"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:fontId="2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <ImageView
                        android:id="@+id/btnFace"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="FB page"
                        android:padding="3dp"
                        android:src="@drawable/ic_face" />

                    <ImageView
                        android:id="@+id/btnWeb"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="open website"
                        android:padding="3dp"
                        android:src="@drawable/ic_link" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_aboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/brain_logo_text"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_buble_green_right"
                android:paddingBottom="30dp"
                android:paddingLeft="50dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp" >

                <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="false"
                    android:text="@string/about_app_desc"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    app:fontId="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/brain_sections_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_aboutus"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_buble_gray_left"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingLeft="50dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="10dp" 
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_groups" />

                    <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/about_with_friends"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        app:fontId="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="10dp" 
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_spinner" 
                        />

                    <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/about_self_task"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        app:fontId="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/brain_sections_container"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_buble_red_left"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp" >

                <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                    android:id="@+id/about_links"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/about_developed_by"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:fontId="2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/about_links"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:padding="8dp" >

                    <ImageView
                        android:id="@+id/btnBrainSocket"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:src="@drawable/brain_text" />
                </LinearLayout>

                <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/about_rights_reserved"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:fontId="1" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>