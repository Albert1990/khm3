<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_color">

    

    <ImageView
        android:id="@+id/vSpinner"
        android:layout_width="180dp" 
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/res_splash"/>
    
    <ImageView
        android:layout_width="180dp" 
        android:layout_height="33dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:gravity="center"
        android:scaleType="fitXY"
        android:layout_below="@id/vSpinner"
        android:src="@drawable/dr_shadow_spot"/>

    <com.brainSocket.khednima3ak3.views.TextViewCustomFont 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:textSize="@dimen/ts_title_big"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        app:fontId="2"/>
    
</RelativeLayout>