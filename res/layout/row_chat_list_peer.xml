<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
        android:id="@+id/tvPeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/vImgContainer"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:background="@drawable/bg_buble_orange_left"
        android:paddingBottom="20dp"
        android:paddingLeft="45dp"
        android:paddingRight="20dp"
        android:paddingTop="7dp"
        android:text="hghgh"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="2" />
    
     <ImageView
        android:id="@+id/ivCheckPeer"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignLeft="@id/tvPeer"
        android:layout_below="@id/tvPeer"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_check_orange" />
        
    <com.brainSocket.khednima3ak3.views.TextViewCustomFont
        android:id="@+id/tvPendingPeer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivCheckPeer"
        android:layout_below="@id/tvPeer"
        android:layout_marginLeft="2dp"
        android:text="@string/place_holder"
        android:textColor="@color/black_light"
        android:textSize="@dimen/ts_text_xsmall"
        app:fontId="3" />


    <FrameLayout
        android:id="@+id/vImgContainer"
        android:layout_width="@dimen/conversation_event_picture_size"
        android:layout_height="@dimen/conversation_event_picture_size"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" >

        <com.brainSocket.khednima3ak3.views.MLRoundedImageView
            android:id="@+id/ivPeer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/default_male_user" />
    </FrameLayout>

</RelativeLayout>