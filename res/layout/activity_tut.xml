<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <com.brainSocket.khednima3ak3.views.ImageViewAppBG
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg2" />

    <RelativeLayout
        android:id="@+id/rlTutStage1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvTut1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/tut1_desc2"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/ts_text_big"
            app:fontId="1" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvTut1_msg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTut1"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/tut1_hint"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/ts_title_small"
            app:fontId="2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTutStage2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvTut2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:minLines="3"
            android:text="@string/tut_desc1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ts_text_big"
            app:fontId="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tvTut2"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/res_splash" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTutStage3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvTut3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:minLines="3"
            android:text="@string/tut_desc2"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ts_text_big"
            app:fontId="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tvTut3"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/res_micro" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTutStage4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
                android:visibility="gone" >

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvTut4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="30dp"
            android:minLines="3"
            android:text="@string/tut_desc3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/ts_text_big"
            app:fontId="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tvTut4"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/res_micro" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ivBtnNext"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_check_green" />

</FrameLayout>