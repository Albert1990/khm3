<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99333333" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/vSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_trans_diag" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:layout_below="@id/vSpinner"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/dr_shadow_spot" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvMsg"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85dp"
            android:gravity="center_horizontal"
            android:text="لرسل اليك ابو عبدو ذكرا جديدا"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/ts_text_big"
            app:fontId="2" />

        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvZeker"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMsg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="ذكرا جديدا"
            android:maxLines="3"
            android:textColor="@color/gray_4"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="2" />
        
        <com.brainSocket.khednima3ak3.views.TextViewCustomFont
            android:id="@+id/tvCount"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvZeker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="@string/event_prompt_times"
            android:textColor="@color/gray_4"
            android:textSize="@dimen/ts_text_normal"
            app:fontId="2" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/event_btn_cansel"
                android:textColor="@color/black_light"
                android:textSize="@dimen/ts_text_normal"
                app:fontId="2" />

            <com.brainSocket.khednima3ak3.views.TextViewCustomFont
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/event_btn_accept"
                android:textColor="@color/black_light"
                android:textSize="@dimen/ts_text_normal"
                app:fontId="2" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>